<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>
  <div>
    <%= f.label :名前 %>
    <%= f.text_field :name, autofocus: true, placeholder:"名前"%>
  </div>
  <div>
    <%= f.label :自己紹介 %>
    <%= f.text_area :introduction, placeholder:"自己紹介" %>
  </div>
  <div>
    <%=f.label :プロフィール画像 %>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  </div>
  
  <%= f.submit "変更を保存" %>
<% end %>
