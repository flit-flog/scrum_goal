<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="d-flex flex-column align-items-center">
        <h2 class="text-center mb-4">プロフィール編集</h2>
          <%= form_with model: @user do |f| %>
            <div>
              <%= f.label :名前, class: "form-label" %>
              <%= f.text_field :name, autofocus: true, class: "form-control", required: true, size: 30%>
            </div>
            <div>
              <%= f.label :自己紹介, class: "form-label" %>
              <%= f.text_area :introduction, class: "form-control", size: "30x3" %>
            </div>
            <div>
              <%=f.label :プロフィール画像, class: "form-label" %>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
            </div>
            
            <%= f.submit "変更を保存" %>
<% end %>

<%= link_to "ユーザーを削除する", user_path(@user), method: :delete, class: "btn btn-sm btn-danger" , data: { confirm: "作成したチームも削除されますがよろしいですか？"} %>