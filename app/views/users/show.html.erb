!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

<!-- ユーザーの投稿一覧 -->

<div>
  <table>
    <tr>
      <th>タイトル</th>
      <th>ユーザー名</th>
    </tr>
    <% @diaries.each do |diary| %>
      <tr>
        <td><%= link_to diary.title, team_diary_path(diary.team_id,diary.id) %></td>
        <td><%= diary.user.name %></td>
      </tr>
    <% end %>
  </table>
</div>