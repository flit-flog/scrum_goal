!-- ユーザーの詳細 -->
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.name %></h3>
  <h5><%= @user.introduction %></h5>
  <% if @user == current_user %>
    <%= link_to "ユーザー編集",  edit_user_path(@user) %>
  <% end %>
</div>


<div>
  <% if @user == current_user && current_user.team_users.blank? %>
    <h5>チームに参加するか作成してください</h5>
    <%= render "searches/form" %>
    <%= link_to "チーム作成", new_team_path %>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->
<div>
  <%= link_to "投稿する", new_diary_path %>
</div>
<div>
  <table>
    <thead>
    <tr>
      <th>タイトル</th>
      <th>チーム名</th>
    </tr>
    </thead>
    <tbody>
      
    <% @diaries.each do |diary| %>
      <% current_user.teams.each do |my_team| %>
        <% if diary.team_id == my_team.id %>
          <tr>
            <td><%= diary.user.name %></td>
            <td><%= link_to diary.title, diary_path(diary) %></td>
            <td><%= diary.team.name %></td>
            <td><%= diary.favorites.count %></td>
            <td><%= diary.diary_comments.count %></td>
            <td><%= diary.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>