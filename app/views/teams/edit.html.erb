<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>チーム編集</h3>
        <%= form_with model: @team, url: team_path(@team), method: :patch do |f| %>
          <div>
            <%= f.label :チーム名 %>
            <%= f.text_field :name,class: "form-control", required: true, size: 30%>
          </div>
        
          <div>
            <%= f.label :紹介文 %>
            <%= f.text_area :introduction, class: "form-control", size: 30%>
          </div>
        
          <div>
            <%= f.label :グループ画像 %>
            <%= f.file_field :team_image, accept: 'image/*' %>
          </div>
        
          <div>
            <%= f.submit '編集する',class: 'btn btn-info' %>
          </div>
        <% end %>

        <div class="d-flex mt-3 justify-content-between">
          <div>
            <%= link_to "チームを削除する", team_path(@team), method: :delete, class: "btn btn-sm btn-danger" , data: { confirm: "本当にチームを削除しますか？"} %>
          </div>
        <div>
          <p class="text-center"><%= link_to "戻る", team_path(@team), class: 'text-dark font-weight-bold' %></p>
        </div>
      </div>
    </div>
  </div>
</div>
