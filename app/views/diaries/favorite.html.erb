 <div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="d-flex flex-column align-items-center">
        <h2 class="text-center mb-4">いいね一覧</h2>
            <table class ="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>名前</th>
                </tr>
              </thead>
              <tbody>
                <% @favorited_users.each do |favorited_user| %>
                  <tr>
                    <td>
                      <div class=class="rounded-circle mr-3">
                        <%= image_tag favorited_user.get_profile_image(50,50) %>
                      </div>
                    </td>
                    <td>
                      <%= link_to favorited_user.name, user_path(favorited_user) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </dv>
      <p class="text-center"><%= link_to "戻る", diary_path(@diary), class: 'text-dark font-weight-bold' %></p>
    </div>
  </div>
</div>