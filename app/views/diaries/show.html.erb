<div>
  <%= @diary.title %>
</div>
<div>
  <%= @diary.user.name %>
</div>
<div>
  <%= @diary.team.name %>
</div>
<div>
  <%= @diary.created_at.strftime('%Y/%m/%d') %>
</div>
<div>
  <%= @diary.body %>
</div>
<diV>
  <% if @diary.user == current_user %>
    <%= link_to "削除", diary_path(@diary), method: :delete %>
  <% end %>
</diV>

<div>
  <% if @diary.favorited_by?(current_user) %>
    <p>
      <%= link_to diary_favorite_path(@diary), method: :delete do %>
        ♥<%= @diary.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to diary_favorites_path(@diary), method: :post do %>
        ♡<%= @diary.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
  <% if @diary.favorites.present? %>
    <%= link_to "いいねしたユーザー一覧",  favorited_user_path(@diary) %>
  <% end %>
</div>


<div>
  <p>コメント件数：<%= @diary.diary_comments.count %></p>
  <% @diary.diary_comments.each do |diary_comment| %>
    <p><%#= image_tag diary_comment.user.get_profile_image(100,100) %></p>
    <%= diary_comment.user.name %>
    <%= diary_comment.created_at.strftime('%Y/%m/%d') %><%= diary_comment.comment %>
    <% if diary_comment.user == current_user%>
      <%= link_to "削除", diary_diary_comment_path(diary_comment.diary, diary_comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@diary, @diary_comment], url: diary_diary_comments_path(@diary) do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメント" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>