<h1>活動記録</h1>
<%= form_with model: @diary, url: diaries_path do |f| %>
  <h4>投稿チーム</h4>
  <%= f.collection_select :team_id, current_user.teams, :id, :name, include_blank: "選択してください" %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>活動内容</h4>
  <%= f.rich_text_area :body %>
  <%= f.submit '投稿' %>
<% end %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="d-flex flex-column align-items-center">
        <h2 class="text-center mb-4">プロフィール編集</h2>
        <%= form_with model: @diary, url: diaries_path do |f| %>
        <div>
          <h4>投稿チーム</h4>
          <%= f.collection_select :team_id, current_user.teams, :id, :name, class: "form-control",required: true, include_blank: "選択してください" %>
        </div>
        <div>
          <h4>タイトル</h4>
          <%= f.text_field :title, class: "form-control", required: true, size: "30" %>
        </div>
        <div>
          <h4>活動内容</h4>
          <%= f.rich_text_area :body, class: "form-control",required: true, size: "30x30" %>  
        </div>
          
          <%= f.submit '投稿',class: "btn btn-sm btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>