<% if diary.favorited_by?(current_user) %>
  <%= link_to diary_favorite_path(diary), remote: true, method: :delete do %>
    <i class="fas fa-heart unlike-btn" ></i>
  <% end %>
  <%= diary.favorites.count %>
<% else %>
  <%= link_to diary_favorites_path(diary), remote: true, method: :post do %>
    <i class="far fa-heart like-btn"></i>
  <% end %>
  <%= diary.favorites.count %> 
<% end %>

<% if diary.favorites.present? %>
  <%= link_to "いいね一覧",  favorited_user_path(diary) %>
<% end %>