<table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>グループ名</th>
        <th>紹介文</th>
        <th>メンバー数</th>
        <th>オーナー名</th>
      </tr>
    </thead>
    <tbody>
      <% teams.each do |team| %>
        <tr>
          <td><%= image_tag team.get_team_image(100,100) %></td>
          <td><%= link_to team.name, team_path(team) %></td>
          <td><%= team.introduction %></td>
          <td><%= "#{team.team_users.count}人" %></td>
          <td><%= link_to team.owner.name, user_path(team.owner_id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>